        script.
            (_ => {
                const is = [];
                for(let i=0;i<161;i+=3) {
                    is[i] = new Image;
                    is[i].src = 'assets/img/dogna/image_005_'+ String(i).padStart(4, '0') + '.png';
                }
                const dgcanvas = document.querySelector('#dogna')
                const dgcontext = dgcanvas.getContext('2d');
                let c = 0;
                setInterval(() => {
                    if (c > 160) c = 0;
                    dgcontext.clearRect(0, 0, dgcanvas.width, dgcanvas.height);
                    dgcontext.drawImage(is[c], -180, -130);
                    c+= 3;
                }, 90)
            }

